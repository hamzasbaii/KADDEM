pipeline{
    agent any
    stages {
        stage("Testing Maven"){
            steps {
                sh "mvn -version"
            }
        }
        stage("Testing JDK"){
            steps {
                sh "java -version"
            }
        }
        stage("Chekout Git"){
            steps {
                echo "Pulling"
            }
        }
        stage('MVN COMPILE') {
            steps{
                sh 'mvn compile'
        }
}

stage('MVN SONARQUBE') {
            steps{

                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
            }
        }
    /*  stage('MVN Nexus') {
            steps{
                sh 'mvn deploy -Dmaven.test.skip=true'
        }
}*/
stage('Docker Image ') {
            steps{
                sh 'docker build -t hamzasbaii/devops-project-1.0 .'
        }
}
    stage('Docker HUB') {
            steps{
                sh 'docker login -u hamzasbaii -p Hamza060200'
                sh 'docker push hamzasbaii/devops-project-1.0'
        }
}
    stage('Docker Compose') {
            steps{
                 sh 'docker-compose up '

        }
}

    }
}
